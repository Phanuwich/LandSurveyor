<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/detail_back"
    tools:context=".DetailFragment">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/layoutScroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        <include
            android:id="@+id/include"
            layout="@layout/detail_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.063" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/topBtnLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="30dp">

                    <Button
                        android:id="@+id/acceptBtn"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/detail_button_back_no_fill"
                        android:text="Accept"
                        android:layout_marginEnd="5dp"
                        android:textColor="@color/colorWhiteTitle"
                        android:textAllCaps="false"
                        android:fontFamily="@font/font_for_detail_btn"/>

                    <Button
                        android:id="@+id/routingBtn"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/detail_button_back_no_fill"
                        android:text="Navigation"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/colorWhiteTitle"
                        android:textAllCaps="false"
                        android:fontFamily="@font/font_for_detail_btn"/>
                </LinearLayout>

                <Button
                    android:id="@+id/startBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/detail_button_back"
                    android:text="@string/detail_start_btn"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBackTitle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/topBtnLayout"
                    app:layout_constraintStart_toStartOf="@+id/topBtnLayout"
                    app:layout_constraintTop_toBottomOf="@+id/topBtnLayout"
                    android:fontFamily="@font/font_for_detail_btn"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>