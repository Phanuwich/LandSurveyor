<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="@dimen/login_form_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.364">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ultralight"
            android:text="@string/login_title"
            android:textSize="@dimen/login_form_title_size" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_text_height"
            android:layout_marginTop="@dimen/login_margin_top_edit_text_btn"
            android:background="@drawable/edit_text_login"
            android:fontFamily="@font/light"
            android:hint="Username"
            android:text="johnyw"
            android:textColor="@color/colorInput"
            android:textColorHint="@color/colorInput"
            android:textCursorDrawable="@color/colorInput"
            android:textSize="@dimen/login_edit_text_btn_size" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_edit_text_height"
            android:layout_marginTop="@dimen/login_margin_top_edit_text_btn"
            android:background="@drawable/edit_text_login"
            android:fontFamily="@font/light"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="1234"
            android:textColor="@color/colorInput"
            android:textColorHint="@color/colorHint"
            android:textSize="@dimen/login_edit_text_btn_size" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/login_margin_top_edit_text_btn"
            android:background="@drawable/selector_login"
            android:fontFamily="@font/light"
            android:soundEffectsEnabled="true"
            android:text="Login"
            android:textAllCaps="false"
            android:textColor="@color/colorLogin"
            android:textSize="@dimen/login_edit_text_btn_size" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>