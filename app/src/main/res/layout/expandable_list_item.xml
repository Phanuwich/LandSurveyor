<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/item_padding"
    android:paddingBottom="@dimen/item_padding">

    <ImageView
        android:id="@+id/tag_item"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/tap_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/tap_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item"
        android:orientation="vertical"
        android:padding="@dimen/item_padding_inner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tag_item"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/listText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left_content"
            android:layout_marginTop="@dimen/item_margin_top_bottom_content"
            android:fontFamily="@font/th_light"
            android:text="item: 2"
            android:textSize="@dimen/item_content_size" />

        <TextView
            android:id="@+id/listText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_margin_left_content"
            android:layout_marginBottom="@dimen/item_margin_top_bottom_content"
            android:fontFamily="@font/th_extralight"
            android:text="item: FKGHDJ"
            android:textSize="@dimen/item_content_size" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
