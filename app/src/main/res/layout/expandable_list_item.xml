<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/item_padding"
    android:paddingBottom="@dimen/item_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/item_margin_drawable"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:tint="@color/colorItem" />
    <LinearLayout
        android:id="@+id/tap_item"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_padding_inner"
        android:background="@drawable/text_block_back"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_top_bottom_content"
            android:layout_marginLeft="@dimen/item_margin_left_content"
            android:text="item: 2"
            android:textSize="@dimen/item_content_size"
            android:fontFamily="@font/th_light"/>

        <TextView
            android:id="@+id/listText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/item_margin_top_bottom_content"
            android:layout_marginLeft="@dimen/item_margin_left_content"
            android:text="item: FKGHDJ"
            android:textSize="@dimen/item_content_size"
            android:fontFamily="@font/th_extralight"/>

    </LinearLayout>
</LinearLayout>
